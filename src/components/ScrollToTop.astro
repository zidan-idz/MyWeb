<button
    id="scroll-to-top"
    aria-label="Scroll to top"
    class="fixed bottom-6 right-6 lg:bottom-8 lg:right-8 z-50 p-3 bg-white dark:bg-slate-800 border-2 border-slate-100 dark:border-slate-700 rounded-full shadow-2xl hover:shadow-indigo-500/20 hover:scale-110 hover:-translate-y-1 transition-all duration-300 opacity-0 translate-y-4 pointer-events-none group"
>
    <i
        class="ri-arrow-up-line text-xl text-slate-600 dark:text-slate-400 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors"
    ></i>
</button>

<script>
    const scrollBtn = document.getElementById("scroll-to-top");

    if (scrollBtn) {
        // Toggle visibility based on scroll position
        const toggleVisibility = () => {
            if (window.scrollY > window.innerHeight) {
                scrollBtn.classList.remove(
                    "opacity-0",
                    "translate-y-4",
                    "pointer-events-none",
                );
                scrollBtn.classList.add("opacity-100", "translate-y-0");
            } else {
                scrollBtn.classList.remove("opacity-100", "translate-y-0");
                scrollBtn.classList.add(
                    "opacity-0",
                    "translate-y-4",
                    "pointer-events-none",
                );
            }
        };

        // Smooth scroll to top
        const scrollToTop = () => {
            window.scrollTo({
                top: 0,
                behavior: "smooth",
            });
        };

        window.addEventListener("scroll", toggleVisibility, { passive: true });
        scrollBtn.addEventListener("click", scrollToTop);
    }
</script>
