<!-- Navigasi -->
<nav
    class="flex items-center justify-between mb-6 border-b border-slate-800 pb-4 relative"
>
    <span
        class="font-mono font-black text-2xl text-slate-900 dark:text-slate-100 tracking-tighter"
    >
        Zidan<span class="text-indigo-500 animate-cursor-cycle"></span>IDz
    </span>

    <!-- Tombol Tema Desktop -->
    <button
        id="theme-toggle-desktop"
        class="hidden lg:flex text-slate-400 hover:text-amber-500 dark:hover:text-indigo-400 transition-colors focus:outline-none"
        title="Switch Mode"
    >
        <i class="ri-moon-line text-2xl"></i>
    </button>

    <!-- Tombol Menu Mobile -->
    <button
        id="mobile-menu-btn"
        class="lg:hidden text-slate-400 hover:text-indigo-400 transition-colors focus:outline-none active:scale-90"
    >
        <i id="menu-icon" class="ri-menu-line text-3xl"></i>
    </button>

    <!-- Menu Dropdown Mobile -->
    <div
        id="mobile-menu"
        class="hidden absolute top-full right-0 mt-2 w-48 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-xl shadow-2xl z-50 p-2 space-y-1"
    >
        <a
            href="mailto:zeyshyy@gmail.com"
            class="flex items-center gap-3 px-3 py-2 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-bold uppercase tracking-wider group"
        >
            <i
                class="ri-mail-line text-[18px] group-hover:text-indigo-400 transition-colors"
            ></i>
            Email
        </a>
        <a
            href="https://github.com/zidan-idz"
            target="_blank"
            class="flex items-center gap-3 px-3 py-2 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-bold uppercase tracking-wider group"
        >
            <i
                class="ri-github-line text-[18px] group-hover:text-slate-900 dark:group-hover:text-white transition-colors"
            ></i>
            GitHub
        </a>
        <a
            href="https://linkedin.com/in/zidan-idz"
            target="_blank"
            class="flex items-center gap-3 px-3 py-2 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-bold uppercase tracking-wider group"
        >
            <i
                class="ri-linkedin-line text-[18px] group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors"
            ></i>
            LinkedIn
        </a>

        <!-- Tombol Tema Mobile -->
        <button
            id="theme-toggle-mobile"
            class="w-full flex items-center gap-3 px-3 py-2 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg transition-colors font-bold uppercase tracking-wider group border-t border-dashed border-slate-300 dark:border-slate-700 mt-2 pt-2"
        >
            <i
                class="ri-moon-line text-[18px] group-hover:text-amber-500 dark:group-hover:text-indigo-400 transition-colors"
            ></i>
            <span id="theme-text-mobile">Switch Mode</span>
        </button>
    </div>
</nav>

<script is:inline>
    const menuBtn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");

    if (menuBtn && menu && menuIcon) {
        menuBtn.addEventListener("click", () => {
            const isHidden = menu.classList.toggle("hidden");
            // Ikon: Menu <-> Tutup
            menuIcon.className = isHidden
                ? "ri-menu-line text-3xl"
                : "ri-close-line text-3xl";
        });

        // Tutup klik luar
        document.addEventListener("click", (e) => {
            if (!menuBtn.contains(e.target) && !menu.contains(e.target)) {
                menu.classList.add("hidden");
                menuIcon.className = "ri-menu-line text-3xl"; // Reset ikon
            }
        });

        // Logika Tema
        const themeToggleDesktop = document.getElementById(
            "theme-toggle-desktop",
        );
        const themeToggleMobile = document.getElementById(
            "theme-toggle-mobile",
        );

        // Ikon & Teks
        const iconDesktop = themeToggleDesktop?.querySelector("i");
        const iconMobile = themeToggleMobile?.querySelector("i"); // Ambil ikon pertama
        const textMobile = document.getElementById("theme-text-mobile");

        function updateIcons(theme) {
            const isDark = theme === "dark";
            const iconClass = isDark ? "ri-moon-line" : "ri-sun-line";
            const modeName = isDark ? "Dark Mode" : "Light Mode";
            const targetModeName = isDark ? "Light Mode" : "Dark Mode"; // Teks mode tujuan

            if (iconDesktop) {
                iconDesktop.className = `${iconClass} text-2xl`;
                themeToggleDesktop.title = `Switch to ${targetModeName}`;
            }
            if (iconMobile) {
                iconMobile.classList.remove("ri-moon-line", "ri-sun-line");
                iconMobile.classList.add(iconClass);
            }
            if (textMobile) {
                // Tampilkan label mode SAAT INI
                //
                textMobile.innerText = modeName;
            }
        }

        // Status Awal
        const savedTheme =
            localStorage.getItem("theme") ||
            (window.matchMedia("(prefers-color-scheme: dark)").matches
                ? "dark"
                : "light");
        updateIcons(savedTheme);

        function toggleTheme() {
            const isDark = document.documentElement.classList.toggle("dark");
            const newTheme = isDark ? "dark" : "light";
            localStorage.setItem("theme", newTheme);
            updateIcons(newTheme);
        }

        if (themeToggleDesktop)
            themeToggleDesktop.addEventListener("click", toggleTheme);
        if (themeToggleMobile)
            themeToggleMobile.addEventListener("click", toggleTheme);
    }
</script>
