---
interface Props {
	title: string;
	description: string;
	techStack: string[];
    decision?: string; // Baru: Catatan Keputusan Teknis
    link?: string;
}

const { title, description, techStack, decision, link } = Astro.props;
---

<div class="group relative p-6 bg-white dark:bg-slate-900 rounded-2xl shadow-sm hover:shadow-xl hover:shadow-indigo-500/10 dark:hover:shadow-indigo-900/10 transition-all duration-300 border border-slate-200 dark:border-slate-800 hover:border-indigo-500/30">
    <div class="flex flex-col sm:flex-row justify-between sm:items-baseline gap-2 mb-4">
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 group-hover:text-indigo-700 dark:group-hover:text-indigo-400 transition-colors">{title}</h3>
        <div class="flex gap-2 text-xs font-medium text-slate-500">
            {techStack.map((tech) => (
                <span class="bg-slate-100 dark:bg-slate-950 px-2.5 py-1 rounded-md border border-slate-200 dark:border-slate-800 text-slate-600 dark:text-slate-400">#{tech}</span>
            ))}
        </div>
    </div>
    
    <p class="text-slate-600 dark:text-slate-400 leading-relaxed mb-6 max-w-prose text-sm md:text-base">
        {description}
    </p>

    {decision && (
        <div class="mb-6 bg-slate-100 dark:bg-slate-950/50 p-4 rounded-xl border border-slate-200 dark:border-slate-800 text-sm relative overflow-hidden group-hover:border-indigo-400/50 dark:group-hover:border-indigo-900/30 transition-colors">
            <!-- Ikon Latar Belakang -->
             <div class="absolute -right-4 -top-4 text-indigo-200 dark:text-indigo-900 opacity-20 dark:opacity-20">
                <i class="ri-brain-line text-[64px]"></i>
            </div>
            <div class="relative z-10">
                <span class="flex items-center gap-2 text-xs font-bold text-indigo-600 dark:text-indigo-400 uppercase tracking-wider mb-2 font-mono">
                    <i class="ri-lightbulb-line text-[14px]"></i>
                    Why this stack?
                </span>
                <p class="text-slate-700 dark:text-slate-300 italic font-medium leading-loose text-[15px]">"{decision}"</p>
            </div>
        </div>
    )}

    {link && (
        <a href={link} class="inline-flex items-center gap-2 text-sm font-bold text-indigo-700 dark:text-indigo-400 hover:text-indigo-600 dark:hover:text-indigo-300 transition-colors group/link px-4 py-2 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg hover:bg-indigo-100 dark:hover:bg-indigo-900/40">
            Lihat Project 
            <i class="ri-arrow-right-line text-sm group-hover/link:translate-x-1 transition-transform"></i>
        </a>
    )}
</div>
