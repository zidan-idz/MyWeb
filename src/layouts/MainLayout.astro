---
import "../styles/global.css";
import ScrollToTop from "../components/ScrollToTop.astro";
const { title = "Zidan | System Information Student" } = Astro.props;
---

<!doctype html>
<html lang="id" class="scroll-smooth overflow-x-hidden lg:overflow-x-visible">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta
            name="description"
            content="Portfolio of Muhammad Raid Zaidani. System Information Student focusing on rational web development and logical problem solving."
        />
        <meta
            name="keywords"
            content="Muhammad Raid Zaidani, Zidan IDz, ZeyShyy, Web Developer, Game Developer, System Information, Python, Astro, Portfolio"
        />
        <meta name="author" content="Muhammad Raid Zaidani" />
        <link rel="canonical" href={Astro.site} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.site} />
        <meta property="og:title" content={title} />
        <meta
            property="og:description"
            content="Portfolio of Muhammad Raid Zaidani. System Information Student focusing on rational web development and logical problem solving."
        />
        <meta property="og:image" content="/og-image.jpg" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.site} />
        <meta property="twitter:title" content={title} />
        <meta
            property="twitter:description"
            content="Portfolio of Muhammad Raid Zaidani. System Information Student focusing on rational web development and logical problem solving."
        />
        <meta property="twitter:image" content="/og-image.jpg" />

        <link rel="icon" type="image/webp" href="/icon.webp" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
            rel="stylesheet"
        />
        <link rel="sitemap" href="/sitemap-index.xml" />

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json" is:inline>
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Muhammad Raid Zaidani",
                "alternateName": ["Zidan IDz", "ZeyShyy"],
                "url": "https://zidan-idz.my.id",
                "image": "https://zidan-idz.my.id/icon.webp",
                "sameAs": [
                    "https://www.facebook.com/muhammadraidzaidani",
                    "https://www.instagram.com/zidan_idz",
                    "https://t.me/Zidan_IDz",
                    "https://github.com/zidan-idz",
                    "https://www.linkedin.com/in/muhammad-raid-zaidani"
                ],
                "jobTitle": "Web & Game Developer",
                "worksFor": {
                    "@type": "Organization",
                    "name": "Freelance"
                },
                "description": "System Information Student focusing on rational web development and logical problem solving."
            }
        </script>

        <!-- Cegah Flash Tema (FOUC) -->
        <script is:inline>
            (function () {
                const savedTheme = localStorage.getItem("theme");
                const systemDark = window.matchMedia(
                    "(prefers-color-scheme: dark)",
                ).matches;

                if (savedTheme === "dark" || (!savedTheme && systemDark)) {
                    document.documentElement.classList.add("dark");
                } else {
                    document.documentElement.classList.remove("dark");
                }
            })();
        </script>
    </head>
    <body
        class="bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100 font-sans antialiased selection:bg-indigo-500 selection:text-white transition-colors duration-300 overflow-x-hidden lg:overflow-x-visible"
    >
        <div
            class="max-w-screen-2xl mx-auto px-6 md:px-12 py-8 md:py-12 min-h-screen flex flex-col"
        >
            <!-- Konten Utama (flex-1 untuk mengisi ruang) -->
            <div class="flex-1">
                <slot />
            </div>

            <footer class="pt-16 pb-8 text-center">
                <div class="flex items-center justify-center gap-6 mb-4">
                    <a
                        href="https://www.facebook.com/muhammadraidzaidani"
                        target="_blank"
                        class="text-slate-500 hover:text-indigo-400 transition-colors"
                    >
                        <i class="ri-facebook-fill text-xl"></i>
                    </a>
                    <a
                        href="https://www.instagram.com/zidan_idz"
                        target="_blank"
                        class="text-slate-500 hover:text-pink-500 transition-colors"
                    >
                        <i class="ri-instagram-fill text-xl"></i>
                    </a>
                    <a
                        href="https://t.me/Zidan_IDz"
                        target="_blank"
                        class="text-slate-500 hover:text-white transition-colors"
                    >
                        <i class="ri-telegram-fill text-xl"></i>
                    </a>
                </div>
                <p class="text-sm text-slate-500 font-mono">
                    &copy; {
                        new Date().getFullYear() > 2024
                            ? `2024-${new Date().getFullYear()}`
                            : "2024"
                    } Muhammad Raid Zaidani.
                </p>
            </footer>
        </div>
        <ScrollToTop />
    </body>

    <style is:global>
        body {
            font-family: "Inter", sans-serif;
        }
        /* Font Sans-Serif untuk Judul */
        h1,
        h2,
        h3,
        h4 {
            font-family: "Inter", sans-serif;
            letter-spacing: -0.025em; /* Rapat & Modern */
        }
        /* Font Monospace Khusus */
        code,
        pre,
        .font-mono {
            font-family: "JetBrains Mono", monospace;
        }
    </style>
</html>
